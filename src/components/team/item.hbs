<div class="team__item">
    <div class="team__item__image">
        <img src="{{item.img}}" alt="" class="team__item__image__first">
        <img src="{{item.img-hover}}" alt="" class="team__item__image__second">
        <button class="team__item__btn btn"></button>
    </div>
    <h5 class="team__item__title">{{item.title}}</h5>
    <div class="team__item__description">
        <div class="team__item__line">
            <p class="team__item__job">Должость: 
                <span class="team__item__name">{{item.job}}</span>
            </p>
            <p class="team__item__departament">Отдел: 
                <span class="team__item__name">{{item.departament}}</span>
            </p>
            <p class="team__item__mail">Email: 
                <a href="mailto:{{item.mail}}" class="team__item__link">{{item.mail}}</a>
            </p>
            <p class="team__item__phone">Телефон: 
                <a href="tel:{{item.phone}}" class="team__item__link">{{item.phone-link}}</a>
            </p>
        </div>
    </div>
</div>